@model IEnumerable<EventPlannerApp.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Aankomende Evenementen</h1>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Naam</th>
            <th>Datum</th>
            <th>Locatie</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Html.Raw(Url.Content(item.ImageUrl))" alt="Afbeelding niet gevonden" style="width:200px; height:auto;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>
                    <a href="@Url.Action("EventData", "Home", new { id = item.Id })" class="btn btn-info">Meer informatie</a>
                </td>
            </tr>
        }
    </tbody>
</table>
